                    <Style TargetType="{x:Type Button}" BasedOn="{StaticResource Search_ButtonJPStyle}">
                        <Setter Property="Width" Value="80"></Setter>
                        <Setter Property="Margin" Value="5,10,5,5"/>
                    </Style>

                </Grid.Resources>
